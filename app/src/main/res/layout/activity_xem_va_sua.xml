<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XemVaSuaActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-16dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:translationZ="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_left_arrow" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi tiết giao dịch"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="6"
                android:layout_gravity="center_vertical"/>

            <ImageButton
                android:id="@+id/btn_cap_nhat_giao_dich"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_pen" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="162dp"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frame_thu_chi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gra_thu"
                android:padding="40dp">

                <TextView
                    android:id="@+id/lb_so_tien_xem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="300.000 đ"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="48dp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_ic"
                        android:layout_width="60dp"

                        android:layout_height="60dp"
                        android:padding="8dp"
                        app:srcCompat="@drawable/cate_coffee_shop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lb_danh_muc_xem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ăn uống"
                            android:textColor="@android:color/widget_edittext_dark"
                            android:textSize="18dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_ic"
                        android:layout_width="60dp"

                        android:layout_height="60dp"
                        android:padding="18dp"
                        app:srcCompat="@drawable/ic_plant" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lb_ghi_chu_xem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Đi ăn với người yêu"
                            android:textColor="@android:color/widget_edittext_dark"
                            android:textSize="16dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_ic"
                        android:layout_width="60dp"

                        android:layout_height="60dp"
                        android:padding="18dp"
                        app:srcCompat="@drawable/ic_calendar__1_" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lb_thoi_gian_xem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thứ hai, 15 thăng 5 năm 2021"
                            android:textColor="@android:color/widget_edittext_dark"
                            android:textSize="16dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_ic"
                        android:layout_width="60dp"

                        android:layout_height="60dp"
                        android:padding="18dp"
                        app:srcCompat="@drawable/ic_wallet" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lb_vi_xem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Agribank"
                            android:textColor="@android:color/widget_edittext_dark"
                            android:textSize="16dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_ic"
                        android:layout_width="60dp"

                        android:layout_height="60dp"
                        android:padding="18dp"
                        app:srcCompat="@drawable/ic_local" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lb_dia_diem_xem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cafe happy day"
                            android:textColor="@android:color/widget_edittext_dark"
                            android:textSize="16dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_ic"
                        android:layout_width="60dp"

                        android:layout_height="60dp"
                        android:padding="18dp"
                        app:srcCompat="@drawable/ic_multiple_users_silhouette" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lb_voi_ai_xem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Crush"
                            android:textColor="@android:color/widget_edittext_dark"
                            android:textSize="16dp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>