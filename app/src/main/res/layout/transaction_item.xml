<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_ic"
            android:layout_width="60dp"

            android:layout_height="60dp"
            android:padding="8dp"
            app:srcCompat="@drawable/cate_coffee_shop" />

        <LinearLayout
            android:id="@+id/lb_noi_dung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lb_vi_xem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đá po`"
                android:textColor="@android:color/widget_edittext_dark"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/lb_ghi_chu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn giản là đi đá pò"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/lb_so_tien"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="600.000 đ"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>
</FrameLayout>